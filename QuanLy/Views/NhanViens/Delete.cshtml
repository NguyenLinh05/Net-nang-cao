@model QuanLy.Models.NhanVien

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ViewAdmin.cshtml";
}


<div >
    <div sclass="col-md-4  ">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Xóa nhân viên</h3>
            </div>

            <div class="card-body">

                <div class="form-group">
                    <label>Mã nhân viên</label>
                    <input type="text" class="form-control float-right" value="@Model.ID" />
                </div>

                <div class="form-group">
                    <label>Tên nhân viên</label>
                    <input type="text" class="form-control float-right" value="@Model.TenNV" />
                </div>

                <div class="form-group">
                    <label>Ngày sinh</label>
                    <input type="text" class="form-control float-right" value="@Model.NgaySinh" />
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label>Giới tính:</label>
                        Nam @Html.RadioButton("GioiTinh","True")
                        Nữ @Html.RadioButton("GioiTinh","False")
                    </div>
                </div>
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" class="form-control float-right" value="@Model.SDT" />
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control float-right" value="@Model.DiaChi" />
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-primary" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>
</div>



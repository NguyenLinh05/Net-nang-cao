@model QuanLy.Models.HoaDonBan

@{
    ViewData["Title"] = "Details";
    CTHDB ctb = (CTHDB)ViewData["ChiTiet"];
    Layout = "~/Views/Shared/_ViewAdmin.cshtml";
}

<h1>Details</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-4">
        <div class="card card-primary">

            <div class="card-header">
                <h3 class="card-title">Details</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>ID:</label>
                    <input type="text" class="form-control float-right" name="ID" value="@Model.ID" />
                </div>
                <div class="form-group">
                    <label>Ngay ban:</label>
                    <input type="text" class="form-control float-right" name="NgayNhap" value="@Model.NgayBan" />
                </div>
                <div class="form-group">
                    <label>Ten nhan vien:</label>
                    <input type="text" class="form-control float-right" name="TenNV" value="@Model.NhanVien.TenNV" />
                </div>
                <div class="form-group">
                    <label>San pham:</label>
                    <input type="text" class="form-control float-right" name="TenSP" value="@ctb.SanPham.TenSP" />
                </div>
                <div class="form-group">
                    <label>So luong:</label>
                    <input type="text" class="form-control float-right" name="SoLuong" value="@ctb.SoLuong" />
                </div>
                <div class="form-group">
                    <label>Ngay san xuat:</label>
                    <input type="text" class="form-control float-right" name="DonGia" value="@ctb.SanPham.NSX" />
                </div>
                <div class="form-group">
                    <label>Han su dung:</label>
                    <input type="text" class="form-control float-right" name="TenNCC" value="@ctb.SanPham.HSD" />
                </div>
                <div class="form-group">
                    <label>Don gia:</label>
                    <input type="text" class="form-control float-right" name="TenLH" value="@ctb.SanPham.DonGia" />
                </div>@*
                <div class="form-group">
                    <label>Tong tien:</label>

                </div>*@
            </div>
        </div>
    </div>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

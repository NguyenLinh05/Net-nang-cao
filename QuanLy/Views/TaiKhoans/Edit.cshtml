@model QuanLy.Models.TaiKhoan

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ViewAdmin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Sửa thông tin nhân viên</h3>
            </div>
            <div class="form-horizontal">
                <hr/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                 <div class="form-group">
                    <div class="col-md-10">
                        <label>Mã tài khoản:</label>
                        <input asp-for="ID" class="form-control" />
                        <span asp-validation-for="ID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Tên đăng nhập:</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Mật khẩu:</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Quyền đăng nhập:</label>
                            <input asp-for="Quyen" class="form-control" />
                            <span asp-validation-for="Quyen" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group; col-md-12">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>


@model QuanLy.Models.TaiKhoan

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ViewAdmin.cshtml";
}

<div class="col-md-4">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Xóa tài khoản</h3>
        </div>

        <div class="card-body">

            <div class="form-group">
                <label>Mã tài khoản</label>
                <input type="text" class="form-control float-right" value="@Model.ID" />

            </div>

            <div class="form-group">
                <label>Tên tài khoản</label>
                <input type="text" class="form-control float-right" value="@Model.UserName" />


            </div>

            <div class="form-group">
                <label>Chức vụ</label>
                <input type="text" class="form-control float-right" value="@Model.Quyen" />

            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>
    
